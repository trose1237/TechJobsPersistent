@model TechJobsPersistent.ViewModels.AddJobViewModel

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployerId">Employer</label>
        <select asp-for="EmployerId" asp-items="@Model.Employers"></select>
        <span asp-validation-for="EmployerId"></span>
        <p><a asp-controller="Employer" asp-action="Add">Add Employer</a></p>
    </div>
    <div class="form-group">
        <label for="selectedSkills">Skills</label>
        @if (Model.Skills == null)
            {
                <p>Create a new skill if you do not see yours.</p>
            }
        else
            {
                @foreach (var skill in @Model.Skills)
                {
                    <input type="checkbox" id="selectedSkills" name="selectedSkills" value="@skill.Id" />
                    <label>@skill.Name</label>
                }
            }
        <p><a asp-controller="Skill" asp-action="Add">Add Skills</a></p>
    </div>

    <input type="submit" value="Add Job" />
</form>

